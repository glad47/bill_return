<odoo>
  <record id="view_move_form_custom" model="ir.ui.view">
    <field name="name">account.move.form.custom</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">
    
      <!-- Insert vendor_id after partner_id -->
      <xpath expr="//field[@name='partner_id']" position="after">
        <field name="vendor_purchase_bill_ids" widget="many2many_tags"/>
      </xpath>



      <!-- Replace invoice_line_ids with a notebook containing tabs -->
      <xpath expr="//field[@name='invoice_line_ids']" position="replace">
        <notebook>
          <page string="Invoice Lines">
            <field name="linked_invoice_line_ids">
              <tree editable="bottom">
                <field name="display_name"/>
                <field name="name"/>
                <field name="quantity"/>
                <field name="price_unit"/> 
              </tree>
            </field>
          </page>
        </notebook>
      </xpath>

    </field>
  </record>
</odoo>
