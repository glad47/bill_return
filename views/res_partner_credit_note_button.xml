<!-- views/res_partner_credit_note_button.xml -->
<odoo>
  <record id="view_partner_form_inherit_credit_note" model="ir.ui.view">
    <field name="name">res.partner.form.credit.note.button</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_partner_form"/>
    <field name="arch" type="xml">
      <xpath expr="//div[@name='button_box']" position="inside">
        <button name="action_vendor_credit_notes"
                type="object"
                class="oe_stat_button"
                icon="fa-undo">
          <field name="credit_note_count" widget="statinfo" string="Credit Notes"/>
        </button>
      </xpath>
    </field>
  </record>
</odoo>
