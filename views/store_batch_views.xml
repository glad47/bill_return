<odoo>
    <record id="view_store_batch_form" model="ir.ui.view">
        <field name="name">store.batch.form</field>
        <field name="model">store.batch</field>
        <field name="arch" type="xml">
            <form string="Store Batch">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="product_id"/>
                        <field name="location_id"/>
                    </group>
                    <group>
                        <field name="start_time"/>
                        <field name="end_time"/>
                        <field name="consumed_qty"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_store_batch_tree" model="ir.ui.view">
        <field name="name">store.batch.tree</field>
        <field name="model">store.batch</field>
        <field name="arch" type="xml">
            <tree string="Store Batches">
                <field name="name" width="120"/>
                <field name="product_id" width="150"/>
                <field name="location_id" width="150"/>
                <field name="start_time" width="150"/>
                <field name="end_time" width="150"/>
                <field name="initial_qty" width="150"/>
                <field name="current_qty" width="150"/>
                <field name="consumed_qty" width="150"/>
                <field name="earned_amount" width="150"/>
                <field name="active" width="80"/>
            </tree>

        </field>
    </record>

    <record id="view_store_batch_search" model="ir.ui.view">
        <field name="name">store.batch.search</field>
        <field name="model">store.batch</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="product_id"/>
                <field name="location_id"/>
                <!-- Active/Inactive Filters -->
                <filter string="Active Batches" name="active" domain="[('active', '=', True)]" context="{'default_active': True}"/>
                <filter string="Inactive Batches" name="inactive" domain="[('active', '=', False)]"/>

                <!-- Time-Based Filters -->
                <filter string="Started Today" name="today" domain="[('start_time', '&gt;=',  context_today())]"/>

               
                <filter string="Expired Batches" name="expired"
                     domain="[('end_time', '&gt;=', context_today())]"/>

                <filter string="Ongoing Batches" name="ongoing" domain="[('start_time', '&lt;=', (context_today())), ('end_time', '&gt;=', (context_today()))]"/>



            </search>
        </field>
    </record>


    <record id="action_store_batch" model="ir.actions.act_window">
        <field name="name">Store Batches</field>
        <field name="res_model">store.batch</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
    </record>

    <menuitem id="menu_store_root" name="Store Product Tracker"/>
    <menuitem id="menu_store_location" name="Locations" parent="menu_store_root" action="action_store_location"/>
    <menuitem id="menu_store_batch" name="Batches" parent="menu_store_root" action="action_store_batch"/>
    
</odoo>
