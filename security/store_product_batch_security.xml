<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.module.category" id="store_product_batch.module_category_store_batch">
        <field name="name">Store Batch</field>
        <field name="description">Access control for store batch users.</field>
        <field name="sequence">22</field>
    </record>

     <!-- Store Batch Admin Group -->
    <record id="group_store_batch_admin" model="res.groups">
      <field name="name">Administrator</field>
      <field name="category_id" ref="store_product_batch.module_category_store_batch"/>
       <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <!-- Store Batch Limited User Group -->
    <record id="group_store_batch_user" model="res.groups">
      <field name="name">User</field>
      <field name="category_id" ref="store_product_batch.module_category_store_batch"/>
    </record>


  
  <data noupdate="1">
    
     <record id="base.user_admin" model="res.users">
            <field name="groups_id" eval="[(4,ref('store_product_batch.group_store_batch_admin'))]"/>
        </record>

     <record id="base.default_user" model="res.users">
            <field name="groups_id" eval="[(4,ref('store_product_batch.group_store_batch_user'))]"/>
        </record>
  </data>

</odoo>
